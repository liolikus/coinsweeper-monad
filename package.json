{
  "name": "coinsweeper-monad-games",
  "description": "A React-based Coinsweeper game with Monad Games ID integration",
  "version": "0.0.1",
  "engines": {
    "node": ">=16",
    "npm": ">=7.0.0"
  },
  "license": "MIT",
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liolikus/coinsweeper-monad.git"
  },
  "keywords": [
    "monad",
    "games-id",
    "ethereum",
    "dapps",
    "wallet",
    "web3",
    "typescript",
    "react",
    "hardhat",
    "gaming"
  ],
  "dependencies": {
    "@privy-io/react-auth": "^1.85.0",
    "@privy-io/wagmi": "^0.2.12",
    "@tanstack/react-query": "^5.0.0",
    "ethers": "^6.14.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@openzeppelin/contracts": "^5.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.119",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "chai": "^4.3.10",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "hardhat": "^2.22.17",
    "path-browserify": "^1.0.1",
    "prettier": "^3.5.3",
    "react-app-rewired": "^2.2.1",
    "rimraf": "^5.0.5",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "build:memory": "NODE_OPTIONS=\"--max-old-space-size=4096\" react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "compile": "hardhat compile --config hardhat.config.ts",
    "deploy:monad": "hardhat run scripts/deployMonad.js --network monadTestnet --config hardhat.config.ts",
    "verify:monad": "hardhat verify --network monadTestnet --config hardhat.config.ts",
    "clean": "rimraf ./artifacts ./cache ./coverage ./dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
