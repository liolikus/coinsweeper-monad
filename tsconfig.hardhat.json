{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*",
    "test/**/*",
    "tasks/**/*",
    "deploy/**/*"
  ],
  "exclude": [
    "node_modules",
    "src",
    "build",
    "dist",
    "artifacts",
    "cache"
  ]
} 